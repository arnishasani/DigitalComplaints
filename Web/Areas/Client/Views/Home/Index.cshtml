<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Kerkesat e mia
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Kerkese/Ankese
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.LlojiKerkeses)
                        </th>
                        <th>
                            Departamenti
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Nenshkrimi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.PershkrimiIkerkeses)
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model.kerkesalist)
                {
                    <tbody>

                        <tr>
                            <td>@item.KerkesaAnkesaId</td>
                            <td>
                                @item.EmriKerkeses
                            </td>
                            <td>@item.EmriDepartamentit</td>
                            <td>
                                @item.Nenshkrimi
                            </td>

                            <td>
                                @Html.Raw(item.PershkrimiIkerkeses)
                            </td>
                        </tr>
                    </tbody>
                }
                </table>
        </div>
    </div>
</div>
