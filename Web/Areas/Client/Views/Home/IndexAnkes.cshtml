@model Web.Areas.Client.Models.KerkesaViewModel
@{
    ViewData["Title"] = "IndexAnkes";
    Layout = "~/Views/Shared/_LayoutManagementView.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <br />
        <div class="alert alert-primary mb-0">
            <span style="font-weight:bold;font-style:italic;  font-size: 24px;color:white">Ankesat</span>
            <br />
        </div>
        <br />
        <div class="card">
            <div class="card-body">
                <div class="row">
                    @{ int i = 0;}
                    @foreach (var item in Model.kerkesalist)
                    {
                        @if (item.Ankes == true && item.IsAnonim == false && item.AnonimId == null)
                        {
                            @*@{ 
                                var data =(DateTime) item.InsertDate;
                            }*@
                            <div class="col-lg-3 col-sm-6">

                                <div class="card gradient" style="background-image:none; background-color:#e3e3fe">
                                    <a href="/Areas/Client/Views/Home/IndexAnkes.cshtml" class="card-body">
                                        <div class="d-inline-block">
                                            <h5>Ankesa</h5>
                                        </div>
                                    </a>
                                    <br>
                                    <h4 class="card-title font-weight-bold">Ankese</h4>
                                    <p class="card-text">@item.InsertDate , @item.EmriDepartamentit</p>
                                    <div class="d-flex justify-content-between">
                                        <h2 class="display-3 degree">Nr @(i+=1)</h2>
                                    </div>
                                    <div class="d-flex justify-content-between mb-4">
                                        <p><i class="fa fa-user" ></i> @item.InsertBy</p>
                                        <p><i class="fa fa-save"></i> ID: 180029K</p>
                                    </div>
                                    <div class="progress md-progress">
                                        <div class="progress-bar black" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <ul class="list-unstyled d-flex justify-content-between font-small text-muted mb-4">
                                        <li class="pl-4">8AM</li>
                                        <li>Vertetuar</li>
                                        <li>Miratuar</li>
                                        <li>Shqyrtuar</li>
                                    </ul>
                                    <div class="collapse-content" style="color:gray">
                                        <div class="collapse" id="collapseExample" style="color:gray">
                                            <table class="table table-borderless table-sm mb-0" style="color:gray">
                                                <tbody>
                                                    <tr>

                                                        <th>Pershkrimi i ankeses</th>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <p class="card-title " style="color:black">@item.PershkrimiIkerkeses</p>

                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <hr class="">
                                        <a class="btn btn-flat red-text p-1 my-1 mr-0 mml-1 deep-purple-text collapsed" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Shiko me shume</a>
                                    </div>
                                    <div id="myModal" class="modal fade delete-modal" role="dialog">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-body text-center">
                                                    <h3>Are you sure want to delete this Course?</h3>
                                                    <div class="m-t-20">
                                                        <a href="#" class="btn mb-3 btn-primary btn-sm" data-dismiss="modal">Close</a>
                                                        <button onclick="DeleteCourse()" id="btnContinueDelete" class="btn mb-3 btn-primary btn-sm">("Delete")</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="hidden" id="hiddenCourseId" />
                                    </div>
                                </div>
                            </div>

                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>



