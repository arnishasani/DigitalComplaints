
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Web.Areas.Client.Models;
@using ApplicationCore.Interfaces;
@inject IMenaxhimiK kerkesatRepository
@model KerkesaViewModel
@{
    ViewData["Title"] = "AddKerkese";
    Layout = "~/Views/Shared/_LayoutManagementView.cshtml";
}
<div style="padding-left:3em; padding-top:3em">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form asp-area="Client" asp-action="AddKerkese" asp-controller="Home" method="post">
                        <div class="col-md-12">
                            <div class="panel-body">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <div class="input-box ">
                                                    <label asp-for="DepartamentiId">Departamenti </label>
                                                    <select name="DepartamentiId" asp-for="DepartamentiId" class="form-control">
                                                        <option value="" disabled selected>-- zgjedh departamentin --</option>
                                                        @foreach (var item in Model.departamentetlist)
                                                        {
                                                            <option value="@item.DepartamentiId" >@item.EmriDepartamentit</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <div class="input-box ">
                                                    <label  asp-for="LlojiKerkeses">Lloji i kerkeses </label>
                                                    <select name="LlojiKerkeses" asp-for="LlojiKerkeses" class="form-control">
                                                        <option value="" disabled selected>-- zgjedh llojin e kerkeses --</option>
                                                        @{ var llojet = kerkesatRepository.GetAllList(); }
                                                        @foreach (var item in llojet)
                                                        {
                                                            <option value="@item.MenaxhimiId">@item.LlojiIkerkeses</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Nenshkrimi">Emri dhe mbiemri</label>
                                                <input name="Nenshkrimi " asp-for="Nenshkrimi" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="PershkrimiIkerkeses"> PershkrimiIKerkese</label>
                                                <textarea maxlength="5001" class="form-control " id="summernote" asp-for="PershkrimiIkerkeses"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <a asp-area="Client" asp-action="Index" asp-controller="Home" class="btn  btn-default btn-xl">Cancel</a>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-success btn-xl"><i class="fa fa-save"></i> Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
