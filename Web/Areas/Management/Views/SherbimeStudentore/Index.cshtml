@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Web.Areas.Management.Models.SherbimeStudentoreKerkesatViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutManagementView.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-4">
                <h1 class="m-0 text-dark" style="text-align:center">Kerkesat</h1>
            </div>
            <div class="col-sm-4">
                <h1 class="m-0 text-dark" style="text-align:center">Ankesat</h1>
            </div>
            <div class="col-sm-4">
                <h1 class="m-0 text-dark" style="text-align:center">Ankesat Anonime</h1>
            </div>
            @*<div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Starter Page</li>
            </ol>
        </div>*@
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4">
                @foreach (var item in Model.sherbimeStudentoreKerkesaList)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="m-0">Tipi Ankeses : @item.LlojiKerkeses</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                @Html.Raw(item.PershkrimiIkerkeses)
                            </p>
                            <h5 style="text-align:left">@item.Departamenti</h5>
                            <h5 style="text-align:right">@item.InsertDate</h5>

                            <a href="#" style="float:right" class="btn btn-primary">Hap detajet</a>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4">
                @foreach (var item in Model.sherbimeStudentoreAnkesaList)
                {

                    <div class="card">
                        <div class="card-header">
                            <h5 class="m-0">Tipi Ankeses : @item.LlojiKerkeses</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                @Html.Raw(item.PershkrimiIkerkeses)
                            </p>
                            <h5 style="text-align:left">@item.Departamenti</h5>
                            <h5 style="text-align:right">@item.InsertDate</h5>
                            <a href="#" style="float:right" class="btn btn-primary">Hap detajet</a>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4">
                @foreach (var item in Model.sherbimeStudentoreAnkesatAnonimeList)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="m-0">Tipi Ankeses : @item.LlojiKerkeses</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                @Html.Raw(item.PershkrimiIkerkeses)
                            </p>
                            <h5 style="text-align:left">@item.Departamenti</h5>
                            @if (item.IsAnonim == true)
                            {
                                <h5 style="text-align:left">Po</h5>
                            }
                            <h5 style="text-align:right">@item.InsertDate</h5>

                            <a href="#" style="float:right" class="btn btn-primary">Hap detajet</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
