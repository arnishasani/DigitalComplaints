@model MenaxhimiKerkesaveViewModel
@using Web.Areas.Management.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Shto Kerkese";
    Layout = "~/Views/Shared/_LayoutManagementView.cshtml";
}

<div style="padding-left:3em; padding-top:3em">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form id="kerkeseID" asp-area="Management" asp-action="AddKerkese" asp-controller="MenaxhimiKerkesave" method="post">
                        <div class="col-md-12">
                            <div class="panel-body">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="LlojiIkerkeses">Shkruaj emertimin e llojit te kerkeses</label>
                                                    <input name="LlojiIkerkeses" asp-for="LlojiIkerkeses" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label asp-for="PershkrimiKerkeses">Cka mundeson kerkesa?</label>
                                                    <textarea maxlength="5001" class="form-control " id="summernote" asp-for="PershkrimiKerkeses"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <a asp-area="Management" asp-action="Index" asp-controller="MenaxhimiKerkesave" class="btn  btn-default btn-xl">Cancel</a>
                                            </div>
                                            <div class="col-md-4">
                                                <button type="submit" class="btn btn-success btn-xl"><i class="fa fa-save"></i>Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @*@await Html.PartialAsync("_ValidationScriptsPartial")*@
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"> </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.0.3/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.0.3/jquery-confirm.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 200
            });
        });
    </script>
    <script>
                var validobj;
                $(function () {
                        validobj = $("#kerkeseID").validate({
                            invalidHandler: function (event, validator) {
                                var errors = validator.numberOfInvalids();
                                if (errors) {
                                    $(".btn-toolbar").show();
                                }
                            },
                            ignore: ".note-editable.panel-body",
                            errorElement: 'div',
                            errorClass: 'error',
                            errorPlacement: function (error, element) {
                                error.appendTo(element.parent());
                                if (element.parent('.input-group').length) {
                                    error.insertAfter(element.parent());
                                } else {
                                    error.appendTo(element.parent());
                                }
                            },
                            rules: {
                                LlojiIkerkeses:
                                {
                                    required: true,
                                    minlength: 3,
                                    normalizer: function (value) {
                                        return $.trim(value);
                                    }
                                },
                            },
                            messages: {
                                LlojiIkerkeses: {
                                    required: '<ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">Ju lutem plotsoni fushen e kerkuar</li></ul>',
                                    minlength: '<ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">Minimumi 3 karaktere</li></ul>'
                                }
                            },
                            submitHandler: function (form) {
                                if (submitted) {
                                    event.preventDefault();
                                    return false;
                                }
                                else {
                                    submitted = true;
                                    form.submit();
                                }
                            }
                        });
                });
    </script>
}
