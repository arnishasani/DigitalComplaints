@model MenaxhimiKerkesaveViewModel
@using Web.Areas.Management.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddKerkese";
    Layout = "~/Views/Shared/_LayoutManagementView.cshtml";
}

<div style="padding-left:3em; padding-top:3em">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form id="kerkeseID" asp-area="Management" asp-action="AddKerkese" asp-controller="MenaxhimiKerkesave" method="post">
                        <div class="col-md-12">
                            <div class="panel-body">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="LlojiIkerkeses">Email</label>
                                                <input name="LlojiIkerkeses" asp-for="LlojiIkerkeses" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <a asp-area="Managment" asp-action="Index" asp-controller="MenaxhimiKerkesave" class="btn  btn-default btn-xl">Cancel</a>
                                            </div>
                                            <div class="col-md-4">
                                                <button type="submit" class="btn btn-success btn-xl"><i class="fa fa-save"></i>Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @*@await Html.PartialAsync("_ValidationScriptsPartial")*@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.0.3/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.0.3/jquery-confirm.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script>
 var validobj;
        $(function () {
            validobj = $("#kerkeseID").validate({
                invalidHandler: function (event, validator) {
                    var errors = validator.numberOfInvalids();
                    if (errors) {
                        $(".btn-toolbar").show();
                    }
                },
                ignore: ".note-editable.panel-body",
                errorElement: 'div',
                errorClass: 'error',
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                    if (element.parent('.input-group').length) {
                        error.insertAfter(element.parent());
                    } else {
                        error.appendTo(element.parent());
                    }
                },
                rules: {
                    LlojiIkerkeses:
                    {
                        required: true,
                        minlength: 3,
                        normalizer: function (value) {
                            return $.trim(value);
                        }
                    },
                },
                messages: {
                    LlojiIkerkeses:{
                        required: '<ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">Ju lutem plotsoni fushen e kerkuar</li></ul>',
                        minlength: '<ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">Minimumi 3 karaktere</li></ul>'
                    }
                },
                submitHandler: function (form) {
                if (submitted) {
                     event.preventDefault();
                     return false;
                }
                else {
                     submitted = true;
                     form.submit();
                }
                }
                });
        });
    </script>
}
