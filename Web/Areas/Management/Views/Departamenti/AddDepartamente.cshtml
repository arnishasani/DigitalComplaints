@using Web.Areas.Management.Models
@model DepartamentiViewModel
@{
    ViewData["Title"] = "AddDepartamente";
    Layout = "~/Views/Shared/_LayoutManagementView.cshtml";
}

<div style="padding-left:3em; padding-top:3em">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form id="departamentFormId" asp-area="Management" asp-action="AddDepartamente" asp-controller="Departamenti" method="post">
                        <div class="col-md-12">
                            <div class="panel-body">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="EmriDepartamentit">Emri Departamentit</label>
                                                <input name="EmriDepartamentit" asp-for="EmriDepartamentit" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <a asp-area="Managment" asp-action="Index" asp-controller="Departamenti" class="btn  btn-default btn-xl">Cancel</a>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-success btn-xl"><i class="fa fa-save"></i> Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.0.3/jquery-confirm.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.0.3/jquery-confirm.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script>
 var validobj;
        $(function () {
            validobj = $("#departamentFormId").validate({
                ignore: ".note-editable.panel-body",
                errorElement: 'div',
                errorClass: 'error',
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                    if (element.parent('.input-group').length) {
                        error.insertAfter(element.parent());
                    } else {
                        error.appendTo(element.parent());
                    }
                },
                rules: {
                    EmriDepartamentit:
                    {
                        required: true,
                        minlength: 3,
                        normalizer: function (value) {
                            return $.trim(value);
                        }
                    },
                },
                messages: {
                    EmriDepartamentit:{
                        required: '<ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">"Ju lutem plotsoni kriterin"</li></ul>',
                        minlength: '<ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">"Minimumi 3 shkronja"</li></ul>'
                },
                },
                submitHandler: function (form) {
                if (submitted) {
                event.preventDefault();
                return false;
                }
                else {
                submitted = true;
                form.submit();
                }
                }
                });
        });
</script>
}